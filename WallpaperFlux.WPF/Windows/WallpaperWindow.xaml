        <WindowsFormsHost Width="auto" Height="auto" x:Name="WallpaperMpvFormHost">
            <windowsForms:Panel x:Name="MpvPlayerHost"/>
        </WindowsFormsHost>
        -->

        <!--
        <media:MediaPlayer x:Name="WallpaperMediaPlayerMPV">
            <media:MpvPlayerHost x:Name="MpvPlayerHostElement" Width="auto" Height="auto" Loop="True" AutoPlay="True"/>
        </media:MediaPlayer>
        -->

        <!--
        <media:MpvPlayerHost x:Name="MpvPlayerHostElement" Width="auto" Height="auto" Loop="True" AutoPlay="True" 
                             Player="{Binding WallpaperMpv}"/>
        -->
    </Grid>
</views:MvxWindow>
